pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                echo 'checking out from  git'
                git 'https://github.com/Francis-88-cpu/simple-java-maven-app.git'
            }
        }
        stage('compile') {
            steps {
                echo 'compiling'
                sh 'mvn compile'
            }
        }
        stage('test') {
            steps {
                echo 'testing'
                sh 'mvn test'
            }
        }
        stage('package') {
            steps {
                echo 'packaging'
                sh  'mvn package'
            }
        }
        stage('Docker build') {
            steps {
                echo 'Docker build'
                sh  'docker build -t fhoward688/sample-java-app:v1 .'
            }
        }
            }
        }