pipeline {
    agent any // You can specify the agent where the pipeline will run. 'any' means it can run on any available agent.

    stages {
        stage('Build') {
            steps {
                // Execute a shell command to perform the build
                sh 'echo "Building the project..."'
            }
        }
        stage('Test') {
            steps {
                // Execute test commands
                sh 'echo "Running tests..."'
            }
        }
        stage('Deploy') {
            steps {
                // Execute deployment steps
                sh 'echo "Deploying the application..."'
            }
        }
    }

    post {
        // Define post-build actions
        success {
            // Actions to perform when the pipeline succeeds
            echo 'Pipeline succeeded! :D'
        }
        failure {
            // Actions to perform when the pipeline fails
            echo 'Pipeline failed! :('
        }
        always {
            // Actions to perform always, regardless of success or failure
            echo 'Pipeline finished!'
        }
    }
}
