pipeline {
    agent any
    tools {
        maven 'MAVEN_PATH' args '-v $HOME/.m2:/root/.m2'
        jdk 'jdk8'
    }
    environment {
        CI = 'true'
    }
    stages {
//         stage('Build') {
//             steps {
//                 sh 'npm install'
//             }
//         }
//         stage('Test') {
//             steps {
//                 sh './jenkins/scripts/test.sh'
//             }
//         }
        stage('Deliver for development') {
            when {
                branch 'development'
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy for production') {
            when {
                branch 'production'
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy for master') {
            when {
                branch 'master'
            }
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
