pipeline {
    agent any
    tools {
        maven 'maven_3.5.3'
        jdk 'JAVA_10.0.1'
    }
    stages {
        stage('Build') {
            steps {
                cmd 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                cmd 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
