pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:$HOME/.m2'
        }
    }
    tools {
        jdk 'jdk8'
    }
    environment {
        CI = 'true'
    }
    stages {
//         stage('Build') {
//             steps {
//                 sh 'npm install'
//             }
//         }
//         stage('Test') {
//             steps {
//                 sh './jenkins/scripts/test.sh'
//             }
//         }
        stage('Deliver for development') {
            when {
                branch 'development'
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy for production') {
            when {
                branch 'production'
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy for master') {
            when {
                branch 'master'
            }
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
