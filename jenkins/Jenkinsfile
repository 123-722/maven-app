pipeline {
    agent { label "jenkins-agent" }
    
    tools {
        maven '3.9.0'
    }

    environment {
        APP_PATH = "apps/hello-world"
    }
    
    stages {
        stage('Build') {
            steps {
                dir(APP_PATH) {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        stage('Test') {
            steps {
                dir(APP_PATH) {
                    sh 'mvn test'
                }
            }

            // post {
            //     always {
            //         junit 'target/surefire-reports/*.xml'
            //     }
            // }
        }

        // stage('Deliver') {
        //     steps {
        //         sh './jenkins/scripts/deliver.sh'
        //     }
        // }
    }
}
