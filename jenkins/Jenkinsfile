pipeline {
    agent any  
       tools {
        maven 'maven'
        jdk 'java'
    }
   
   
    stages {
        stage('Clone') {
            steps {
                git branch:'main', credentialsId:'27cbf76c-45d6-433c-a3f3-b7bec4b93aa5', url:'https://github.com/additivats01/simple-java-maven-app/'
            }
        }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
               
            }
        }  
      
    }
}
