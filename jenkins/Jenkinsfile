pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh "/opt/apache-maven-3.8.6/bin/mvn --version"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
                sh "/opt/apache-maven-3.8.6/bin/mvn --version"
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
